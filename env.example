# Steam Account Credentials
STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password

# Steam 2FA Shared Secret (optional, for automatic 2FA code generation)
# Get this from your Steam Mobile Authenticator
STEAM_SHARED_SECRET=your_shared_secret_here

# API Server Configuration
API_PORT=3000

# File Cache (optional, defaults to disabled)
# Set to 'true' to enable saving profiles to disk and caching API responses
# If you only use the API endpoint, you can leave this disabled
ENABLE_FILE_CACHE=false

# Output Directory (optional, only used if ENABLE_FILE_CACHE=true, defaults to ./output)
OUTPUT_DIR=./output

# Log Level (optional, defaults to 'info')
# Options: error, warn, info, debug
LOG_LEVEL=info

